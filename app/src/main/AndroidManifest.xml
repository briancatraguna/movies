    package="com.dicoding.movieapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/movie_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/movie_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp" >
        <activity android:name=".searchresult.detailshow.DetailSearchShowActivity" >
        </activity>
        <activity android:name=".searchresult.detailmovie.DetailSearchMovieActivity" />
        <activity android:name=".searchresult.SearchResultActivity" />
        <activity android:name=".detail_tvshow.DetailShowActivity" />
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".detail_movie.DetailMovieActivity" />
        <activity android:name=".home.HomeActivity" />
        <activity android:name=".splashscreen.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>